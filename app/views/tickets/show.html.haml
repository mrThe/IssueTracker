%p#notice= notice

%p
  %b Sub:
  = @ticket.sub_id
%p
  %b Status:
  = @ticket.status.name
%p
  %b Customer name:
  = @ticket.customer_name
%p
  %b Customer email:
  = @ticket.customer_email
%p
  %b Subject:
  = @ticket.subject
%p
  %b Message:
  = @ticket.message
%p
  %b Owner:
  = @ticket.owner_name

= render 'ticket_histories/index'

- if current_user && current_user.can_edit?
  = render 'ticket_histories/form'
- else
  = render 'ticket_histories/user_form'
= link_to 'Back', tickets_path
