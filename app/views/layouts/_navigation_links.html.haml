- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{ "aria-expanded" => "false", "data-toggle" => "dropdown", href: "#", role: "button" }
      Tickets
      %span.caret
    %ul.dropdown-menu{ role: "menu" }
      %li= link_to "All tickets", tickets_path
      %li= link_to "New unassigned tickets", tickets_path(status: :unassigned)
      %li= link_to "Open Tickets", tickets_path(status: :open)
      %li= link_to "On hold tickets", tickets_path(status: :on_hold)
      %li= link_to "Closed Tickets", tickets_path(status: :completed)
